<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_crossBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/btn_vector_cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/register_texOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="35sp"

        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@+id/register_crossBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintHorizontal_bias="0.05"


        />

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="@color/teal_200"
        android:textSize="25sp"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@id/register_texOne"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.08"/>


    <EditText
        android:id="@+id/edit_fullName"
        android:hint="  John Doe"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_input_container"
        app:layout_constraintTop_toBottomOf="@+id/label_fullName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/teal_200"
        android:textSize="25sp"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@id/edit_fullName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.06"/>


    <EditText
        android:id="@+id/edit_email"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="   johndoe@email.com"
        android:background="@drawable/back_input_container"
        app:layout_constraintTop_toBottomOf="@+id/label_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:textColor="@color/teal_200"
        android:textSize="25sp"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@id/edit_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.06"/>


    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="   +00 123 456 7890"
        android:background="@drawable/back_input_container"
        app:layout_constraintTop_toBottomOf="@+id/label_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/teal_200"
        android:textSize="25sp"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@id/edit_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.06"/>


    <EditText

        android:id="@+id/edit_pass"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="   Password"
        android:background="@drawable/back_input_container"
        app:layout_constraintTop_toBottomOf="@+id/label_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_btnone"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/bebas_neue"
        android:background="@drawable/back_button_container"
        app:layout_constraintTop_toBottomOf="@+id/edit_pass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.3"


        />

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Already have an account?"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_btnone"
        app:layout_constraintVertical_bias="0.4" />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:fontFamily="@font/poppins_light"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@color/white"
        android:textColor="@color/mati"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_already"
        app:layout_constraintTop_toBottomOf="@+id/register_btnone"
        app:layout_constraintVertical_bias="0.4"/>

</androidx.constraintlayout.widget.ConstraintLayout>