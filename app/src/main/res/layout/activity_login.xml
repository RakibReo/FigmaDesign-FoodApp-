<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_crossBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/btn_vector_cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/login_texOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@+id/login_crossBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintHorizontal_bias="0.05"


        />


    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:textColor="@color/teal_200"
        android:textSize="25sp"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@id/login_texOne"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.3"/>


    <EditText
        android:id="@+id/edit_login_mail"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="   johndoe@email.com"
        android:background="@drawable/back_input_container"
        app:layout_constraintTop_toBottomOf="@+id/label_login_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/teal_200"
        android:textSize="25sp"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@id/edit_login_mail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.06"/>


    <EditText

        android:id="@+id/edit_login_pass"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="   Password"
        android:background="@drawable/back_input_container"
        app:layout_constraintTop_toBottomOf="@+id/label_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_forgetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Forget Password"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintTop_toBottomOf="@id/edit_login_pass"
    />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btnone"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/bebas_neue"
        android:background="@drawable/back_button_container"
        app:layout_constraintTop_toBottomOf="@+id/label_forgetPass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.3"


        />

    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Don't have an account?"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_btnone"
        app:layout_constraintVertical_bias="0.4" />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Register"
        android:fontFamily="@font/poppins_light"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@color/white"
        android:textColor="@color/mati"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_already"
        app:layout_constraintTop_toBottomOf="@+id/login_btnone"
        app:layout_constraintVertical_bias="0.4"/>


</androidx.constraintlayout.widget.ConstraintLayout>