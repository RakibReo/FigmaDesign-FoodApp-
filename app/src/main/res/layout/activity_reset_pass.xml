<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_crossBtn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/btn_vector_cross"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.1"/>

    <TextView
        android:id="@+id/reset_texOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget password"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@+id/reset_crossBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintHorizontal_bias="0.05"


        />


    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_resetlink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text=" We'll send a password reset link to your email"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:gravity="left"
        app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintVertical_bias="0.04"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reset_texOne"
        />


    <androidx.constraintlayout.utils.widget.MotionLabel
        android:id="@+id/label_reset_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/teal_200"
        android:textSize="25sp"
        android:fontFamily="@font/bebas_neue"
        app:layout_constraintTop_toBottomOf="@id/label_resetlink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintVertical_bias="0.2"/>


    <EditText

        android:id="@+id/edit_forget_pass"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:hint="   johndoe@email.com"
        android:background="@drawable/back_input_container"
        app:layout_constraintTop_toBottomOf="@+id/label_reset_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_login_btn"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_button_container"
        android:fontFamily="@font/bebas_neue"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_forget_pass"
        app:layout_constraintVertical_bias="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>